<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FC.PassengerCurrentTrip">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/log10crop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/TripInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/txtTripInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgLogo"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="220dp"
                    android:text="Trip Information"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/PassengerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/txtPassenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgLogo"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:text="Surath Gunawardena"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/startPointInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/lbStartPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgLogo"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:text="Starting Point"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtStartPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/lbStartPoint"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Kaduwela"
                    android:textSize="15dp"

                    />

            </LinearLayout>



        <LinearLayout
            android:id="@+id/endPointInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/lbEndPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgLogo"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:text="Destination Point"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtEndPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/lbEndPoint"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Battaramulla"
                    android:textSize="15dp"

                    />

            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/btnStartTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <Button
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Start Trip"
                android:textSize="20dp"

                />

        </LinearLayout>
        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>