            <!--android:layout_marginLeft="100dp"-->
            <!--android:orientation="horizontal">-->

        <!--<Button-->
            <!--android:id="@+id/checkHis"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:text="Check History"-->
                <!--android:layout_marginLeft="5dp"-->
