<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/driver_card1"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        app:cardMaxElevation="3dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:layout_marginTop="0dp"
        app:cardElevation="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/puidHidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="puidHidden"
            android:textColor="@color/colorBlack"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/duidHidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="duidHidden"
            android:textColor="@color/colorBlack"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/proImage1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user2"
                app:civ_border_color="#313030"
                app:civ_border_width="2dp" />
        </LinearLayout>

        <LinearLayout
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFullName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Namal Perera" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAmt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Total Amount Paid:"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="250.00"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStarting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Total Trips Travelled: "
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTripsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="25"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
