                <!--android:background="@drawable/ovel_drawable"-->
                <!--android:backgroundTint="@color/colorBlack"-->
                <!--android:textColor="@color/colorText"-->
                <!--android:textStyle="bold"/>-->
        <!--</LinearLayout>-->

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>