<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="@dimen/activity_horizontal_margin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/proImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="30dp"

                android:layout_alignParentLeft="true"
                android:src="@drawable/user2"
                app:civ_border_color="#313030"
                app:civ_border_width="2dp" />


            <TextView
                android:id="@+id/txtName"
                android:layout_toRightOf="@id/proImage"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txtHiddenToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Token"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/txtHiddenPassengerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passenger Id "
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/txtHiddenTripId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip Id"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/txtSource"
                android:layout_toRightOf="@id/proImage"
                android:layout_below="@id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source"
                />

            <TextView
                android:id="@+id/txtDestination"
                android:layout_toRightOf="@id/proImage"
                android:layout_below="@id/txtSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination"
                />

            <TextView
                android:id="@+id/txtTripStatus"
                android:layout_toRightOf="@id/proImage"
                android:layout_below="@id/txtDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>