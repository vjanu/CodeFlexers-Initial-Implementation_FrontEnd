<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FC.TripHistory.Trip_Details.DriverHistoryDetailsFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/proImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user2"
        app:civ_border_color="#313030"
        app:civ_border_width="2dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txtDriverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver Name"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_below="@id/proImage"
        />

    <TextView
        android:id="@+id/txtVehicleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDriverName"
        android:text="Suzuki"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txtNoPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVehicleName"
        android:text="WA-2324"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txtviewprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNoPlate"
        android:layout_centerHorizontal="true"
        android:text="View Profile"
        android:textColor="#52BAFF"
        android:textSize="14dp"
        android:clickable="true"
        android:textStyle="bold"
        />

</RelativeLayout>